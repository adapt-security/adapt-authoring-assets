{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "asset",
  "description": "An Adapt assets.json file",
  "type": "object",
  "properties": {
    "description": {
      "title": "Description",
      "description": "The asset description",
      "type": "string"
    },
    "path": {
      "description": "The relative path to the stored asset",
      "type": "string",
      "isInternal": true,
      "_backboneForms": {
        "showInUi": false
      }
    },
    "repo": {
      "title": "Repository",
      "description": "Specifies the type of asset repository used to store this asset",
      "type": "string",
      "isInternal": true,
      "_backboneForms": {
        "showInUi": false
      }
    },
    "size": {
      "description": "The size of the asset",
      "type": "number",
      "_backboneForms": {
        "showInUi": false
      }
    },
    "subtype": {
      "description": "The asset subtype (identifies the exact kind of data of the specified type)",
      "type": "string",
      "_backboneForms": {
        "showInUi": false
      }
    },
    "title": {
      "title": "Title",
      "description": "The asset title",
      "type": "string"
    },
    "type": {
      "description": "The asset type (audio, video, image etc)",
      "type": "string",
      "_backboneForms": {
        "showInUi": false
      }
    },
    "url": {
      "title": "URL",
      "description": "If using an external asset, this should be the URL to the asset",
      "type": "string",
      "format": "uri"
    }
  },
  "required": ["title", "description"]
}
